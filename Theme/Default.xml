<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE themes PUBLIC "-//www.matthiasmann.de//TWL-Theme//EN" "http://hg.l33tlabs.org/twl/raw-file/tip/src/de/matthiasmann/twl/theme/theme.dtd">
<themes>
    <fontDef name="normal" filename="font.fnt" color="#000000" default="true">
        <fontParam if="error" color="red"/>
        <fontParam if="warning" color="orange"/>
        <fontParam if="disabled" color="gray"/>
        <fontParam if="textSelection" color="blue"/>
    </fontDef>

    <inputMapDef name="-defaultInputMap">
        <action name="selectAll">ctrl A</action>
        <action name="selectAll">cmd A</action>
        <action name="cut">ctrl X</action>
        <action name="cut">cmd X</action>
        <action name="copy">ctrl C</action>
        <action name="copy">cmd C</action>
        <action name="paste">ctrl V</action>
        <action name="paste">cmd V</action>
    </inputMapDef>

    <theme name="-defaults">
        <param name="background"><image>none</image></param>
        <param name="overlay"><image>none</image></param>
        <param name="font"><font>normal</font></param>
        <param name="textAlignment"><enum type="alignment">left</enum></param>
        <param name="minWidth"><int>0</int></param>
        <param name="minHeight"><int>0</int></param>
        <param name="maxWidth"><int>0</int></param>
        <param name="maxHeight"><int>0</int></param>
        <param name="inputMap"><inputMap>-defaultInputMap</inputMap></param>
    </theme>

    <theme name="label" ref="-defaults" allowWildcard="true">
    </theme>
    <include filename="guitheme.xml"/>
    <theme name="button" ref="-defaults">
        <param name="background"><image>button_background</image></param>
        <param name="border"><border>5,0</border></param>
        <param name="minWidth"><int>12</int></param>
        <param name="minHeight"><int>12</int></param>
    </theme>
    <theme name="closeButton" ref="-defaults">
        <param name="minWidth"><int>14</int></param>
        <param name="maxWidth"><int>14</int></param>
        <param name="minHeight"><int>14</int></param>
        <param name="maxHeight"><int>14</int></param>
        <param name="background"><image>closebutton_background</image></param>
    </theme>
    <theme name="editField" ref="-defaults">
        <param name="background"><image>editField</image></param>
        <param name="border"><border>5,0</border></param>
        <theme name="renderer" ref="-defaults"/>
        <param name="mouseCursor"><cursor>cursor_text</cursor></param>
        <param name="minWidth"><int>4</int></param>
        <param name="minHeight"><int>4</int></param>
    </theme>
    <theme name="resizableframe_titled" ref="-defaults">
        <param name="background"><image>resizableframe_titled</image></param>
        <param name="minWidth"><int>3</int></param>
        <param name="minHeight"><int>27</int></param>
    </theme>
    <theme name="resizableframe" ref="-defaults">
        <param name="background"><image>resizableframe</image></param>
        <param name="minWidth"><int>4</int></param>
        <param name="minHeight"><int>4</int></param>
    </theme>
    <theme name="scrollbar_horizontal" ref="-defaults">
        <theme name="leftbutton" ref="-defaults">
            <param name="background"><image>scrollbar_horizontal_button_left_background</image></param>
        </theme>
        <theme name="rightbutton" ref="-defaults">
            <param name="background"><image>scrollbar_horizontal_button_right_background</image></param>
        </theme>
        <theme name="thumb" ref="-defaults">
            <param name="background"><image>scrollbar_horizontal_thumb_background</image></param>
        </theme>
        <param name="background"><image>scrollbar_horizontal_bar</image></param>
        <param name="scaleThumb"><bool>true</bool></param>
    </theme>
    <theme name="scrollpane" ref="-defaults">
        <theme name="scrollbar_horizontal" ref="scrollbar_horizontal"/>
        <param name="autoScrollArea"><int>5</int></param>
        <param name="autoScrollSpeed"><int>10</int></param>
    </theme>
</themes>
